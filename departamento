    public void removerFuncionario(funcionario funcionario){
        for (int i=0;i < totalfuncionarios; i++){
           Object[] funcionarios;
        if(funcionarios[i].equals(funcionario)){
              funcionarios[i] = [totalfuncionarios -1];
              funcionarios[totalfuncionarios -1]= null;
              totalfuncionarios--;
              break;
           }
        }
    }

    public void daraumento(double percentual){
        for(int i = 0; i< totalfuncionarios; i++){
            funcionario[i].daraumento(percentual);
        }
    }
